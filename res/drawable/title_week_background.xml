<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 填充 -->
    <solid android:color="@color/calendar_title_background" />
    <!-- 定义填充的颜色值 -->

    <!-- 描边 -->
    <stroke
        android:width="1dp"
        android:color="@color/calendar_title_split" />
    <!-- 定义描边的宽度和描边的颜色值 -->

    <!-- 间隔 -->
    <padding
        android:bottom="3dp"
        android:left="0dp"
        android:right="0dp"
        android:top="3dp" />
    <!-- 设置各个方向的间隔 -->

</shape>